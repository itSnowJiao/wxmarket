/* components/IOU/index.wxss */
.popBaitiao {
  width: 100%;
  height: 100%;
  position: fixed;
  z-index: 99;
  left: 0;
  right: 0;
  top: 0;
  background: rgba(0,0,0,.6);
}
.popMain {
  position: absolute;
  bottom: 0;
  min-height: 600rpx;
  max-height: 800rpx;
  width: 100%;
  background: #fff;
}
.pop_head {
  position: relative;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 28rpx;
  font-weight: 700;
  color: #333;
  background-color: #f3f2f8;
}
.head-close {
  position: absolute;
  right: 20rpx;
}
.pop_body {
  margin-bottom: 100rpx;
  max-height: 720rpx;
  overflow: auto;
  padding: 40rpx 20rpx;
  color: #333;
  font-size: 24rpx;
}
.body-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 10rpx 0;
}
.body-item image {
  width: 36rpx;
  height: 36rpx;
  margin-right: 20rpx;
}
.body-text {
  display: flex;
  flex-direction: column;
}
.body-text text {
  display: block;
  margin-top: 10rpx;
  color: #999;
}
.pop_btn {
  width: 100%;
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
}
.pop_btn button {
  width: 100%;
  /* height: 100rpx; */
  line-height: 100rpx;
  background: #17abe3;
  color: #fff;
  font-size: 36rpx;
  border-radius: 0;
}



