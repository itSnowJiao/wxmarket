/* pages/detail/index.wxss */

.detail {
  display: flex;
  flex-direction: column;
  width: 100%;
}

.slider {
  width: 100%;
  background: #fff;
  height: auto;
  box-sizing: border-box;
  border-top: 2rpx solid #e8e8ed;
  border-bottom: 2rpx solid #e8e8ed;
}

.swiper-item {
  height: 100%;
}

.goods-info {
  background-color: #fff;
  width: 100%;
  /* padding-bottom: 140rpx; */
  margin-bottom: 140rpx;
}

.info_title {
  padding: 20rpx;
  font-size: 32rpx;
  color: #333;
}

.info_price {
  padding: 20rpx;
  color: #e93b3d;
  font-size: 36rpx;
  font-weight: bold;
}

.btn_bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  width: 100%;
  background: #fff;
  display: flex;
  flex-direction: row;
  border-top: 2px solid #eee;
}

.icon_cart {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 50%;
  font-size: 22rpx;
  color: #666;
}

.badge {
  position: absolute;
  right: 150rpx;
  width: 30rpx;
  height: 30rpx;
  border-radius: 50%;
  border: 1px solid #17abe3;
  background: #fff;
  color: #333;
  text-align: center;
  top: 5rpx;
}

.icon_cart image {
  width: 40rpx;
  height: 40rpx;
}

.cart_btn {
  width: 50%;
}

.cart_btn button {
  border: none;
  outline: none;
  background-color: #17abe3;
  color: #fff;
  font-size: 28rpx;
  /* height: 90rpx; */
  line-height: 90rpx;
  border-radius: 0;
  width: 100%;
}
